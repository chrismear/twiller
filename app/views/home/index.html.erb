<h1>Twiller</h1>
<div id="person-bar">
  <% if logged_in? -%>
    <div id="person-bar-greeting">Logged in as <%= link_to_current_person :content_method => :login %></div>
    <div id="person-bar-action"  >(<%= link_to "Log out", logout_path, {:method => :delete, :title => "Log out"} %>)</div>
  <% else -%>
    <div id="person-bar-greeting">Not logged in</div>
    <div id="person-bar-action"  ><%= link_to "Log in",  login_path,  { :title => "Log in" } %> /
                                 <%= link_to "Sign up", signup_path, { :title => "Create an account" } %></div>
  <% end -%>
</div>

<%= standard_flashes %>
